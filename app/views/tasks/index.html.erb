<div class="container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'All', tasks_path %>&nbsp;&nbsp;|
      &nbsp;<%= link_to 'Incomplete', '/incomplete' %>&nbsp;&nbsp;
      <%= link_to 'New Task', new_project_task_path(@project), class: 'btn btn-info' %>
    </div>
    <h1>Tasks</h1>
  </div>
  <p id="notice"><%= notice %></p>
  <ol class="breadcrumb">
    <li><%= link_to 'Projects', projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li>Tasks</li>
  </ol>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="col-md-4">Description</th>
        <th class="col-md-2">Complete</th>
        <th class="col-md-2">Due Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td class="col-md-4"><%= link_to task.description, project_task_path(@project, task) %> <span class="badge"><%= task.comments.count %></span></td>
          <td class="col-md-2"><%= task.completed %></td>
          <td class="col-md-2"><%= task.due_date %></td>
          <td class="text-right"><%= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-info' %>
                                <%= link_to project_task_path(@project, task), method: :delete, data: {confirm: 'Are you sure?' } do %>
                                      <span class="glyphicon glyphicon-remove"></span>
                                    <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
