<div class="container">
  <div class="page-header">
    <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-info pull-right", id: 'edit-button' %>
    <h1><%= @project.name %></h1>
  </div>
  <ol class="breadcrumb">
    <li><%= link_to 'Projects', projects_path %></li>
    <li><%= @project.name %></li>
  </ol>
  <p>
    <%= link_to "#{@project.tasks.count} Tasks", project_tasks_path(@project) %>
  </p>
  <p>
    <%= link_to "#{@project.memberships.count} Members", project_memberships_path(@project) %>
  </p>
  <div class="well">
    <h2>Delete Project</h2>
    <p>Deleting this project will also delete <%= @project.memberships.count %> memberships, <%= @project.tasks.count %>
      <% if @project.tasks.count == 1 %>
        task
      <% else %>
        tasks
      <% end %>
    and associated comments.</p>
    <%= link_to 'Delete', project_path(@project), method: :delete, class: "btn btn-danger" %>
  </div>
</div>
