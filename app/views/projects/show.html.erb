<div class="container">
  <div class="page-header">
    <%= link_to 'Delete', project_path(@project), method: :delete, class: "btn btn-danger pull-right" %>
    <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-info pull-right", id: 'edit-button' %>
    <h1><%= @project.name %></h1>
  </div>
  <ol class="breadcrumb">
    <li><%= link_to 'Projects', projects_path %></li>
    <li><%= @project.name %></li>
  </ol>
  <p>
    <%= link_to "#{@project.tasks.count} Tasks", project_tasks_path(@project) %>
  </p>
  <p>
    <%= link_to "#{@project.memberships.count} Members", project_memberships_path(@project) %>
  </p>
</div>
