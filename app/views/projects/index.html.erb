<div class="container">
  <div class="page-header">
    <%= link_to 'Create Project', new_project_path, class: "btn btn-info pull-right" %>
    <h1>Projects</h1>
  </div>
  <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="col-md-2">Name</th>
          <th class="col-md-2">Tasks</th>
          <th class="col-md-8"></th>
        </tr>
      </thead>
      <tbody>
        <% if current_user.is_admin? %>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.name, project_path(project) %></td>
              <td><%= link_to project.tasks.count, project_tasks_path(project) %>
              <td class="text-right"><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-info' %>
                <%= link_to 'Delete', project_path(project), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        <% else %>
          <% if @memberships.present? %>
            <% @memberships.each do |membership| %>
              <tr>
                <td><%= link_to membership.project.name, project_path(membership.project) %></td>
                <td><%= link_to membership.project.tasks.count, project_tasks_path(membership.project) %>
                <td class="text-right"><%= link_to 'Edit', edit_project_path(membership.project), class: 'btn btn-info' %>
                  <%= link_to 'Delete', project_path(membership.project), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
  </table>
</div>
