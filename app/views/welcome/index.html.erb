<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="container">
  <div class="jumbotron">
    <h1>gCamp</h1>
    <p>Your life, organized.</p>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p class="lead">
        <%= image_tag("tablet.jpg", class: "img-responsive") %>
      </p>
    <div class="panel panel-primary">
      <div class="panel-heading">Tasks</div>
        <div class="panel-body home-panel">Grouped by projects and lists, just the way you like'em</div>
      </div>
    </div>
      <div class="col-md-4">
        <p class="lead">
          <%= image_tag("hands.jpg", class: "img-responsive") %>
        </p>
      <div class="panel panel-primary">
        <div class="panel-heading">Documents</div>
        <div class="panel-body home-panel">
          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <p class="lead">
        <%= image_tag("guy.jpg", class: "img-responsive") %>
      </p>
      <div class="panel panel-primary">
        <div class="panel-heading">Comments</div>
        <div class="panel-body home-panel">
          <ul>
            <li>Comment on tasks and documents</li>
              <li>Get email notifications</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <% @quotes.each_slice(2) do |quote, author| %>
      <p>"<%= quote %>" </p>
      <p class ="text-muted"><em><%= author %></em></p>
    <% end %>
  </div>
