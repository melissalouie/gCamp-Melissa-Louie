<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="carousel">

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
     <div class="item active">
      <%= image_tag("business_meeting.jpg", class: 'layer') %>
       <div class="carousel-caption">
           <h1>Taskdom</h1>
           <h2>Your life, organized.</h2>
       </div>
     </div>
     <div class="item">
       <%= image_tag("tablet.jpg", class: 'layer') %>
       <div class="carousel-caption">
           <h1>Task efficiently | Increase productivity</h1>
       </div>
     </div>
     <div class="item">
       <%= image_tag("hands.jpg", class: 'layer') %>
       <div class="carousel-caption">
           <h1>Easy to use | Tool for success</h1>
       </div>
     </div>
   </div>
  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <i class="fa fa-angle-left" id="arrow"></i>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <i class="fa fa-angle-right" id="arrow"></i>
  </a>
</div>
<div class="content clearfix">
  <div class="clearfix how-to">
    <h1>How does it work?</h1>
    <center><a href="#about"><i class="fa fa-chevron-down"></i></a></center>
  </div>
  <a name="about"></a>
  <div class="clearfix about">
    <div class="row">
      <div class="col-md-4">
        <center><i class="fa fa-file"></i></center>
        <h3>Create a new project</h3>
      </div>
      <div class="col-md-4">
        <center><i class="fa fa-users"></i></center>
        <h3>Add members, assign roles, create tasks</h3>
      </div>
      <div class="col-md-4">
        <center><i class="fa fa-check"></i></center>
        <h3>Watch your project get done!</h3>
      </div>
    </div>
    <!-- <h1>Sign up to get started now.</h1> -->
  </div>
</div>
