<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :first_name, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.text_field :first_name, class: "form-control", id: "first_name" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :last_name, class: "control-label col-md-2" %>
      <div class="form-controls col-md-4">
        <%= f.text_field :last_name, class: "form-control", id: "last_name" %>
      </div>
    </div>
  <div class="form-group row">
    <%= f.label :email, class: "control-label col-md-2" %>
    <div class="form-controls col-md-4">
      <%= f.email_field :email, class: "form-control", id: "email" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-offset-2 col-md-4">
      <%= f.submit class: "btn btn-info" %>
      <%= link_to 'Cancel', users_path, class: 'btn btn-default' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-offset-2 col-md-4 well">
      <center><%= link_to 'Delete User', user_path(@user), method: 'delete', class: 'btn btn-danger' %></center>

    </div>
  </div>
<% end %>
