<div class="container">
  <div class="page-header">
    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-info pull-right" %>
    <table>
      <thead>
        <tr>
          <th colspan="3"><h1><%= @user.first_name %>&nbsp;<%= @user.last_name %></h1></th>
        </tr>
      </thead>
    </table>
  </div>
    <ol class="breadcrumb">
      <li><%= link_to 'Users', users_path %></li>
      <li><%= @user.first_name %>&nbsp;<%= @user.last_name %></li>
    </ol>
  <dl class="dl-horizontal">
    <dt>First Name</dt>
    <dd><%= @user.first_name %></dd>
    <dt>Last Name</dt>
    <dd><%= @user.last_name %></dd>
    <dt>Email</dt>
    <dd><%= @user.email %><dd>
  </dl>

</div>
