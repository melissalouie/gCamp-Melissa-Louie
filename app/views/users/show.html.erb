<div class="container">
  <div class="page-header">
    <% if current_user.id == @user.id || current_user.is_admin? %>
      <%= link_to 'Delete', user_path(@user), method: :delete, confirm: 'Are you sure?', class: "btn btn-danger pull-right" %>
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-info pull-right", id: "edit-button" %>
    <% end %>
    <h1><%= @user.first_name %>&nbsp;<%= @user.last_name %></h1>
  </div>
    <ol class="breadcrumb">
      <li><%= link_to 'Users', users_path %></li>
      <li><%= "#{@user.first_name} #{@user.last_name}" %></li>
    </ol>
  <dl class="dl-horizontal">
    <dt>First Name:</dt>
    <dd><%= @user.first_name %></dd>
    <dt>Last Name:</dt>
    <dd><%= @user.last_name %></dd>
    <% if current_user.id == @user.id || current_user.is_admin? %>
      <dt>Email:</dt>
      <dd><%= @user.email %><dd>
    <% end %>
  </dl>

</div>
