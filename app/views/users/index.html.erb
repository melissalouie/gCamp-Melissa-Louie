<div class="container">
  <div class="page-header">
    <%= link_to 'New User', new_user_path, class: 'btn btn-info pull-right' %>
  <h1>Users</h1>
  </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th colspan="3"><h3>Name</h3></th>
          <th colspan="3"><h3>Email</h3></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td colspan="3"><%= user.first_name %>&nbsp;<%= user.last_name %></td>
            <td colspan="3"><%= mail_to user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
