<div class="container">
  <div class="well col-md-6 col-md-offset-3" id="sign_up">
    <h1>Sign Up for Taskdom</h1>

    <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :first_name, class: "control-label" %>
      <div class="form-controls">
        <%= f.text_field :first_name, class: "form-control", id: "first_name" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name, class: "control-label" %>
      <div class="form-controls">
        <%= f.text_field :last_name, class: "form-control", id: "last_name" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "control-label" %>
      <div class="form-controls">
        <%= f.email_field :email, class: "form-control", id: "email" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "control-label" %>
      <div class="form-controls">
        <%= f.password_field :password, class: "form-control", id: "password" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, class: "control-label" %>
      <div class="form-controls">
        <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="form-controls">
        <%= f.submit 'Sign Up', class: 'btn btn-info' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
